<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Posts</h1>
  <a href="/posts/new" class="btn btn-primary">Add Post</a>
</div>

<% if (posts && posts.length > 0) { %>
  <ul class="list-group">
    <% posts.forEach(function(item) { %>
      <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="me-3">
          <h5 class="mb-1"><%= item.title %></h5>
          <small 
            class="text-muted post-date" 
            data-datetime="<%= new Date(item.created_at).toISOString() %>">
            <!-- fallback: server time -->
            <%= new Date(item.created_at).toUTCString() %>
          </small>
        </div>
        <div class="ms-auto">
          <a
            href="/posts/<%= item.id || item._id || item.postId %>"
            class="btn btn-outline-primary btn-sm"
          >
            View
          </a>
        </div>
      </li>
    <% }) %>
  </ul>
<% } else { %>
  <div class="alert alert-info">
    No posts yet. Click <strong>Add Post</strong> to create one.
  </div>
<% } %>