{
  "name": "notes-app",
  "version": "1.0.0",
  "description": "Notes application with CI/CD pipeline",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix"
  },
  "dependencies": {
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "mongoose": "^7.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.37.1",
    "@types/jest": "^30.0.0",
    "eslint": "^8.48.0",
    "eslint-config-standard": "^17.1.0",
    "jest": "^29.6.4",
    "jest-junit": "^16.0.0",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
